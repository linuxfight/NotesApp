@using System.Data
@model DataRow

<h1> Are you sure that you want to delete this note? </h1>

<form method="post" asp-action="DeleteNote">
	<input type="text" name="id" value="@Model["Id"]" hidden/>
	<label> Id: @Model["Id"] </label>
	<br/>
	<label> Id: @Model["Title"] </label>
	<br />
	<label> Id: @Model["Message"] </label>
	<br />
	<input type="submit" class="btn btn-danger" value="Delete" />
</form>