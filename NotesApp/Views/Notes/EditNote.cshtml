@using System.Data
@model DataRow

<h1> Edit note </h1>

<form method="post">
	<input type="text" name="id" value="@Model["Id"]" hidden/>
	<label> Title </label>
	<input type="text" name="title" value="@Model["Title"]"/>
	<br />
	<label> Message </label>
	<textarea name="message"> @Model["Message"] </textarea>
	<br />
	<input type="submit" class="btn btn-primary" value="Save"/>
</form>